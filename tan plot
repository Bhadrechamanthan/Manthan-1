% Define the x values 
x = linspace(-2*pi, 2*pi, 150);

% calculate the tangent values
y =tan(x);

% Plot the tangent function 
figure;
plot(x,y, 'LineWidth',2);
title('plot of tan(x)');
xlabel ('x')
ylabel ('tan(x)');
grid on;

%set xlim and ylim for better aesthetics
xlim([-2*pi,2*pi]);
ylim([-10,10]);
